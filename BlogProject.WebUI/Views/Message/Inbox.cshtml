@using BlogProject.Entity.Concrete
@model List<Message2>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th style=" font-size: 15px;">Konu</th>
        <th style=" font-size: 15px;">Gönderen</th>
        <th style=" font-size: 15px;">Tarih</th>
        <th style=" font-size: 15px;">Mesajı Görüntüle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.ID</th>
            <td style=" font-size: 15px;">@item.Subject</td>
            <td style=" font-size: 15px;">@item.SenderUser.Name</td>
            <td style=" font-size: 15px;">@(((DateTime)item.MessageDate).ToString("dd-MMM-yyyy"))</td>
            <td><a href="/Message/MessageDetails/@item.ID" class="btn-sm btn-primary">Görüntüle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Article/AddArticle" class="btn btn-facebook">Yeni Mesaj Oluştur</a>

