@model BlogProject.Entity.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri</h4>
                <br />
                @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Ad Soyad</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                        @*<input type="text" class="form-control" id="exampleInputName1" name="Name">*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        @*<input type="email" class="form-control" name="Email" id="exampleInputEmail3">*@
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Şifre</label>
                        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                        @*<input type="password" name="Password" class="form-control" id="exampleInputPassword4">*@
                    </div>

                    <div class="form-group">
                        <label>Profil Fotoğrafı</label>
                        <input type="file" name="Image" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled>
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Yükle</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Hakkımda</label>
                        @Html.TextAreaFor(x => x.About, 10, 3, new { @class = "form-control" })
                        @*<textarea name="About" class="form-control" id="exampleTextarea1" rows="4"></textarea>*@
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                    <button class="btn btn-light">Vazgeç</button>
                </form>
            </div>
        </div>
    </div>
}

